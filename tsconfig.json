{
  "compilerOptions": {
    "target": "ES5",
    "module": "ESNext",
    "jsx": "react-jsxdev",
    "resolveJsonModule": true,
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "moduleResolution": "node",
    "baseUrl": "./src",
    "outDir": "./dist",
    "typeRoots": ["./node_modules/@types"],
    "plugins": [{ "name": "typescript-plugin-css-modules" }]
  },
  "include": ["src", "global.d.ts"],
  "exclude": ["node_modules", "**/*.test.tsx"]
}
